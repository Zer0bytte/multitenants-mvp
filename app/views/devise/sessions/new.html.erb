<div class="max-w-md mx-auto">
  <div class="bg-white shadow-sm rounded-2xl p-8">
    <h2 class="text-2xl font-semibold mb-6 text-center">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium mb-1" %>
        <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: "w-full border rounded-xl px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>
      <div>
        <%= f.label :password, class: "block text-sm font-medium mb-1" %>
        <%= f.password_field :password,
          autocomplete: "current-password",
          class: "w-full border rounded-xl px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2">
          <%= f.check_box :remember_me, class: "rounded border-gray-300" %>
          <%= f.label :remember_me, class: "text-sm" %>
        </div>
      <% end %>
      <div>
        <%= f.submit "Log in",
          class: "w-full bg-indigo-600 text-white py-2 rounded-xl font-medium hover:bg-indigo-500 transition" %>
      </div>
    <% end %>
    <div class="mt-6 text-sm text-center text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
